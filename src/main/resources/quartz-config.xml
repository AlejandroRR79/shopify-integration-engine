<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Escaneo de componentes -->
    <context:component-scan base-package="com.creditienda" />

    <!-- Job Estafeta -->
    <bean id="jobEstafeta" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass" value="com.creditienda.job.EstafetaJob" />
        <property name="durability" value="true" />
    </bean>
    <bean id="triggerEstafeta" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="jobEstafeta" />

        <property name="cronExpression" value="${estafeta.cron.exp}" />

        <!-- 
        <property name="cronExpression" value="0 0/1 * * * ?" />
        -->
        <property name="misfireInstructionName" value="MISFIRE_INSTRUCTION_DO_NOTHING" />
    </bean>

    <!-- Job Timbrado -->
    <bean id="jobDetailTimbrado" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass" value="com.creditienda.job.TimbradoJob" />
        <property name="durability" value="true" />
    </bean>

    <bean id="triggerTimbrado" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="jobDetailTimbrado" />
        <property name="cronExpression" value="0 0 0/12 * * ?" />
    </bean>

    <!-- JobFactory que permite inyección de dependencias -->
    <bean id="jobFactory" class="com.creditienda.config.AutowiringSpringBeanJobFactory" />

    <!-- Scheduler con JobFactory -->
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <!-- Graceful shutdown: esperar a que terminen los jobs en shutdown -->
        <property name="waitForJobsToCompleteOnShutdown" value="true" />
        <property name="jobFactory" ref="jobFactory" />
        <property name="triggers">
            <list>
                <!--
                <ref bean="triggerTimbrado" />
                -->
                <ref bean="triggerEstafeta" />

            </list>
        </property>
        <!-- Ajustes básicos de Quartz (thread pool) -->
        <property name="quartzProperties">
            <props>
                <!-- Ajusta según carga; 5 es un punto de partida razonable -->
                <prop key="org.quartz.threadPool.threadCount">5</prop>

                <!-- Opcional: activar si vas a correr en cluster (requiere DB JobStore) -->
                <!--
            <prop key="org.quartz.jobStore.class">org.quartz.impl.jdbcjobstore.JobStoreTX</prop>
            <prop key="org.quartz.jobStore.isClustered">true</prop>
            -->
            </props>
        </property>
    </bean>

</beans>